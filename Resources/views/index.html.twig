{% extends '@AropixelAdmin/List/datatable.html.twig' %}

{% block header_title %}Administrez les pages de votre site{% endblock %}
{% block header_breadcrumb %}
    <ul class="breadcrumb breadcrumb-caret position-right">
        <li class="breadcrumb-item"><a href="{{ url('_admin') }}">Accueil</a></li>
        <li class="breadcrumb-item active">Pages</li>
    </ul>
{% endblock %}


{% block header_top_right %}
    {% set baseroute = get_baseroute() %}
    {% if route_exists(baseroute ~ '_order') %}
        <a href="{{ path(baseroute ~ '_order') }}" class="btn btn-small btn-default">
            <i class="fas fa-arrows-alt me-2"></i> Organiser
        </a>
    {% endif %}
    {% if app.request.get('_route') != baseroute ~ '_new' and route_exists(baseroute ~ '_new') %}
        <a href="{{ path(baseroute ~ '_new', {'type': type}) }}" class="btn btn-small btn-primary ms-3">
            <i class="fas fa-plus me-2"></i> Créer
        </a>
    {% endif %}
{% endblock %}


{% block paneltitle %}Liste des pages{% endblock %}


{% block paneldatatable %}

    <table class="table card-table table-vcenter text-nowrap datatable">
        <thead>
            <tr>
                <th class="no-sort" style="width: 100px"></th>
                <th>Titre</th>
                <th>Date</th>
                <th class="no-sort" style="width:100px">Actions</th>
            </tr>
        </thead>
        <tbody>

            {% for page in pages %}

                <tr>
                    <td>
                        {% set webPath = page|field('image') ? 'images/' ~ page|field('image') : null %}
                        <a class="position-relative" href="{{ path('aropixel_page_edit', {'type': page.type, 'id': page.id}) }}">
                            <img class="img-rounded rounded-3" src="{{ webPath | aropixel_imagine_filter('admin_thumbnail') }}" height="60" />
                            <span class="img-state-icon img-state-icon--{{ page.status }}" title="{{ page.status == 'online' ? "En ligne" : "Hors ligne" }}"></span>
                        </a>
                    </td>
                    <td>
                        <a class="d-flex align-items-center" href="{{ path('aropixel_page_edit', {'type': page.type, 'id': page.id}) }}">
                            {{ page.title }}
                        </a>
                    </td>
                    <td>{{ page.createdAt|date('d/m/Y') }}</td>
                    <td class="text-right">
                        <div class="btn-group">
                            <button type="button" class="badge badge-light badge-icon" data-bs-toggle="dropdown" data-boundary="viewport">
                                <i class="fas fa-ellipsis-h"></i>
                            </button>
                            <div class="dropdown-menu dropdown-menu-end" data-bs-popper="static">
                                <a href="{{ path('aropixel_page_edit', {'type': page.type, 'id': page.id}) }}" class="dropdown-item has-icon"><i class="fas fa-edit"></i> Modifier</a>
                                <div class="dropdown-divider"></div>
                                <a data-confirm="Supprimer la page|Êtes-vous certain de vouloir supprimer cette page ?" class="delete dropdown-item has-icon text-danger">
                                    <i class="fas fa-trash"></i> Supprimer
                                </a>
                                {{ form(delete_forms[page.id]) }}
                            </div>
                        </div>
                    </td>
                </tr>

            {% endfor %}

        </tbody>
    </table>

{% endblock %}
